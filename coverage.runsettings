<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <DataCollectionRunSettings>
    <DataCollectors>
      <DataCollector friendlyName="XPlat Code Coverage">
        <Configuration>
          <Format>cobertura,opencover</Format>
          <!-- Only include our project assemblies -->
          <Include>
            [BecauseImClever.*]*
          </Include>
          <Exclude>
            [*.Tests]*
            [*]*.Migrations.*
            [*]*.Program
            [xunit.*]*
            [Moq]*
            [bunit.*]*
            [AngleSharp.*]*
            [Microsoft.*]*
            [System.*]*
            [FluentAssertions]*
            [coverlet.*]*
            [Newtonsoft.*]*
            [NuGet.*]*
            [Markdig]*
            [YamlDotNet]*
            [Octokit]*
          </Exclude>
          <ExcludeByAttribute>
            Obsolete
            GeneratedCodeAttribute
            CompilerGeneratedAttribute
            ExcludeFromCodeCoverageAttribute
          </ExcludeByAttribute>
          <ExcludeByFile>
            **/Migrations/**/*.cs
            **/*.designer.cs
            **/*.generated.cs
          </ExcludeByFile>
          <IncludeDirectory>
            src/**/*.cs
          </IncludeDirectory>
          <SingleHit>false</SingleHit>
          <UseSourceLink>true</UseSourceLink>
          <IncludeTestAssembly>false</IncludeTestAssembly>
          <SkipAutoProps>true</SkipAutoProps>
          <DeterministicReport>false</DeterministicReport>
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>
  <RunConfiguration>
    <ResultsDirectory>.\TestResults</ResultsDirectory>
  </RunConfiguration>
</RunSettings>
