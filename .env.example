# Email Settings for Contact Form
# Copy this file to .env and fill in your values
# NEVER commit .env to source control!

# Office 365 SMTP Settings
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_ENABLE_SSL=true

# Your Office 365 credentials
# If MFA is enabled, you'll need to create an App Password
SMTP_USERNAME=your-email@yourdomain.com
SMTP_PASSWORD=your-app-password-here

# Email addresses
SMTP_FROM_ADDRESS=your-email@yourdomain.com
SMTP_FROM_NAME=BecauseImClever Contact Form
SMTP_TO_ADDRESS=your-email@yourdomain.com

# PostgreSQL Database Settings
DB_HOST=your-db-host
DB_PORT=5432
DB_NAME=BecauseImClever
DB_USERNAME=BecauseImClever
DB_PASSWORD=your-database-password-here

# Authentik Authentication Settings
# Configure these values from your Authentik OIDC provider
AUTHENTIK_AUTHORITY=https://authentik.becauseimclever.com/application/o/becauseimclever/
AUTHENTIK_CLIENT_ID=your-client-id-here
AUTHENTIK_CLIENT_SECRET=your-client-secret-here
AUTHENTIK_ADMIN_GROUP=becauseimclever-admins

# Deployment Settings
# Used by scripts/deploy.sh for automated deployments
SITE_URL=https://becauseimclever.com

# Cloudflare Cache Purge (optional - skip with --skip-cache-purge)
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# Health check timeout in seconds (optional, default: 60)
HEALTH_CHECK_TIMEOUT=60
